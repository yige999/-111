# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Data Sources Configuration
RSS_FEEDS=https://www.producthunt.com/feed,https://www.futurepedia.io/new
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=AutoSaaSRadar/1.0

# Scheduling Configuration
CRON_SCHEDULE=0 9 * * *
DATA_SOURCE_LIMIT=50
REQUEST_DELAY=2  # seconds between requests

# API Configuration
API_HOST=localhost
API_PORT=8000
DEBUG=false

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SUPABASE_URL=${SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_KEY=${SUPABASE_KEY}

# Email/Telegram Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Google Trends API (Optional)
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here